[
  {
    "api": "ens/testnet/erc20.eth",
    "constants": "./constants.json"
  },
  {
    "query": "./queries/name.graphql",
    "variables": {
      "network": "testnet",
      "address": "$Erc20Addr"
    }
  },
  {
    "query": "./queries/symbol.graphql",
    "variables": {
      "network": "testnet",
      "address": "$Erc20Addr"
    }
  },
  {
    "query": "./queries/decimals.graphql",
    "variables": {
      "network": "testnet",
      "address": "$Erc20Addr"
    }
  },
  {
    "query": "./queries/totalSupply.graphql",
    "variables": {
      "network": "testnet",
      "address": "$Erc20Addr"
    }
  },
  {
    "query": "./queries/balanceOf.graphql",
    "variables": {
      "network": "testnet",
      "address": "$Erc20Addr",
      "account": "$address0"
    }
  },
  {
    "query": "./queries/balanceOf.graphql",
    "variables": {
      "network": "testnet",
      "address": "$Erc20Addr",
      "account": "$address1"
    }
  },
  {
    "query": "./queries/allowance.graphql",
    "variables": {
      "network": "testnet",
      "address": "$Erc20Addr",
      "owner": "$address0",
      "spender": "$address1"
    }
  },
  {
    "query": "./mutations/approve.graphql",
    "variables": {
      "network": "testnet",
      "address": "$Erc20Addr",
      "spender": "$address1",
      "amount": "$amount"
    }
  },
  {
    "query": "./mutations/increaseAllowance.graphql",
    "variables": {
      "network": "testnet",
      "address": "$Erc20Addr",
      "spender": "$address1",
      "addedValue": "1000000000"
    }
  },
  {
    "query": "./mutations/decreaseAllowance.graphql",
    "variables": {
      "network": "testnet",
      "address": "$Erc20Addr",
      "spender": "$address1",
      "subtractedValue": "1000000000"
    }
  },
  {
    "query": "./mutations/transfer.graphql",
    "variables": {
      "network": "testnet",
      "address": "$Erc20Addr",
      "recipient": "$address1",
      "amount": "$amount"
    }
  }
]
